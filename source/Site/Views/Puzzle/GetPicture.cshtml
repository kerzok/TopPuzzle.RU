@model Toppuzzle.Site.Models.PictureViewModel

@{
    Layout = null;
}
<div class="puzzle">
    <canvas id="editor" height="@Model.Height" width="@Model.Width" style="border: 2px black solid;"></canvas>
    <div id="image-parts">
        @foreach (var i in Model.RandomList) {
            <div id="image_part" style="display: inline-block;">
                <img src="data:image/png;base64,@Model.Parts.ElementAt(i)" alt="" class="pic_for_item" index="@i" width="@(Model.Width/6)" height="@(Model.Height/6)" style="display: inline-block; margin: 5px; border: black; border-style: double"/>
            </div>
        }
    </div>
    <img src="@Url.Content(Model.Source)" alt="" width="@(Model.Width/5)" height="@(Model.Height/5)" style="display: inline-block"/>
</div>

<div class="complexity-popup" id="popup1">
    <div class="popup-content">
        <div id="close-btn">✖</div>
        <div>Паззл собран!</div>
    </div>
</div>