<div id="message-box"></div>
<form class="form-horizontal" id="change-avatar-form" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    <hr />
    <input name="file" id="file" class="btn btn-default" type="file" value="Загрузить изображение"/>
    <img id="previewHolder" alt="Uploaded Image Preview Holder" width="90" height="90" style="display: none" />
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Изменить Аватар" />
        </div>
    </div>
</form>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}